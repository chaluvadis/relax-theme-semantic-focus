{
  "name": "relaxed-theme-semantic-focus",
  "displayName": "Relaxed Theme - Semantic Focus & Grafana Alloy",
  "description": "A calm, readable dark theme for Visual Studio Code with firstâ€‘class semantic highlighting. Includes Grafana Alloy language support with validation and formatting.",
  "version": "0.0.11",
  "publisher": "nomad-in-code",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/relax-theme-semantic-focus.git"
  },
  "bugs": {
    "url": "https://github.com/chaluvadis/relax-theme-semantic-focus/issues"
  },
  "homepage": "https://github.com/chaluvadis/relax-theme-semantic-focus#readme",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:alloy"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  },
  "categories": [
    "Themes",
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "VSCode",
    "Themes",
    "Relaxed",
    "theme",
    "dark theme",
    "light theme",
    "semantic highlighting",
    "typescript",
    "javascript",
    "python",
    "csharp",
    ".net",
    "low eye strain",
    "accessibility",
    "grafana",
    "alloy",
    "observability",
    "monitoring",
    "telemetry",
    "configuration"
  ],
  "galleryBanner": {
    "color": "#2b2f34",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "alloy",
        "aliases": [
          "Grafana Alloy",
          "alloy"
        ],
        "extensions": [
          ".alloy"
        ],
        "configuration": "./language-configuration/alloy-language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "alloy",
        "scopeName": "source.alloy",
        "path": "./syntaxes/alloy.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Relaxed Theme - Dark Focus (Semantic)",
        "uiTheme": "vs-dark",
        "path": "./themes/relaxed-theme-semantic-dark-focus.json"
      },
      {
        "label": "Relaxed Theme - Night Warm (Semantic)",
        "uiTheme": "vs-dark",
        "path": "./themes/relaxed-theme-semantic-night-warm.json"
      },
      {
        "label": "Relaxed Theme - Day Light (Semantic)",
        "uiTheme": "vs",
        "path": "./themes/relaxed-theme-semantic-day-light.json"
      }
    ],
    "configurationDefaults": {
      "window.autoDetectColorScheme": true,
      "workbench.preferredDarkColorTheme": "Relaxed Theme - Dark Focus (Semantic)",
      "workbench.preferredLightColorTheme": "Relaxed Theme - Day Light (Semantic)",
      "editor.semanticHighlighting.enabled": true
    }
  },
  "license": "MIT",
  "extensionKind": [
    "ui"
  ]
}
