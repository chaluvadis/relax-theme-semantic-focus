{
  "name": "relaxed-theme-semantic-focus",
  "displayName": "Relaxed Theme - Semantic Focus",
  "description": "A calm, readable dark theme for Visual Studio Code with firstâ€‘class semantic highlighting. Tuned for TypeScript/JavaScript and C# (.NET)",
  "version": "0.0.9",
  "publisher": "nomad-in-code",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/relax-theme-semantic-focus.git"
  },
  "bugs": {
    "url": "https://github.com/chaluvadis/relax-theme-semantic-focus/issues"
  },
  "homepage": "https://github.com/chaluvadis/relax-theme-semantic-focus#readme",
  "engines": {
    "vscode": "^1.105.0"
  },
  "scripts": {
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.6.2"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "VSCode",
    "Themes",
    "Relaxed",
    "theme",
    "dark theme",
    "light theme",
    "semantic highlighting",
    "typescript",
    "javascript",
    "python",
    "csharp",
    ".net",
    "low eye strain",
    "accessibility"
  ],
  "galleryBanner": {
    "color": "#2b2f34",
    "theme": "dark"
  },
  "contributes": {
    "themes": [
      {
        "label": "Relaxed Theme - Dark Focus (Semantic)",
        "uiTheme": "vs-dark",
        "path": "./themes/relaxed-theme-semantic-dark-focus.json"
      },
      {
        "label": "Relaxed Theme - Night Warm (Semantic)",
        "uiTheme": "vs-dark",
        "path": "./themes/relaxed-theme-semantic-night-warm.json"
      },
      {
        "label": "Relaxed Theme - Day Light (Semantic)",
        "uiTheme": "vs",
        "path": "./themes/relaxed-theme-semantic-day-light.json"
      }
    ],
    "configurationDefaults": {
      "window.autoDetectColorScheme": true,
      "workbench.preferredDarkColorTheme": "Relaxed Theme - Dark Focus (Semantic)",
      "workbench.preferredLightColorTheme": "Relaxed Theme - Day Light (Semantic)",
      "editor.semanticHighlighting.enabled": true
    },
    "devDependencies": {
      "sharp": "^0.33.0",
      "vsce": "^2.15.0"
    },
    "license": "MIT",
    "extensionKind": [
      "ui"
    ]
  }
}
